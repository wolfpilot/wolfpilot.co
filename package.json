{
  "name": "wolfpilot.github.io",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "concurrently -n NEXT,TS -c magenta,cyan \"next dev\" \"yarn ts --watch\"",
    "build": "next build",
    "postbuild": "yarn generate:sitemap",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier ./src/**/*.{ts,tsx} --write",
    "ts": "tsc --noEmit --incremental --preserveWatchOutput --pretty",
    "ts:watch": "yarn ts --watch",
    "storybook": "storybook dev -p 6006 --ci",
    "build-storybook": "storybook build",
    "test": "jest --ci",
    "test:watch": "jest --watch",
    "test:coverage": "jest --ci --coverage --runInBand --watchAll=false",
    "generate:sitemap": "next-sitemap --config sitemap.config.js"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "eslint": "8.43.0",
    "eslint-config-next": "13.4.7",
    "framer-motion": "^10.12.17",
    "image-size": "^1.0.2",
    "isomorphic-dompurify": "^1.6.0",
    "next": "14.2.14",
    "next-seo": "^6.6.0",
    "next-sitemap": "^4.1.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-syntax-highlighter": "^15.5.0",
    "sharp": "^0.32.1",
    "styled-components": "^6.0.0-rc.1",
    "typescript": "5.6.2",
    "use-next-navigation-event": "^0.1.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "7.0.24",
    "@storybook/addon-interactions": "7.0.24",
    "@storybook/addon-links": "7.0.24",
    "@storybook/blocks": "7.0.24",
    "@storybook/nextjs": "7.0.24",
    "@storybook/react": "7.0.24",
    "@storybook/testing-library": "0.2.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.3.2",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/styled-components": "^5.1.26",
    "@types/testing-library__jest-dom": "^6.0.0",
    "babel-plugin-styled-components": "^2.1.1",
    "concurrently": "^8.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-storybook": "^0.6.12",
    "eslint-plugin-testing-library": "^6.3.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-extended": "^4.0.2",
    "lint-staged": "^13.2.3",
    "prettier": "3.3.3",
    "storybook": "7.0.24"
  }
}
